<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="id.toriqwah.project.view.splashscreen.SplashScreenViewModel" />
    </data>
<RelativeLayout android:id="@+id/view_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_x3"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Prologs"
            android:padding="@dimen/space_x1"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{vm.data.tagline}"
            android:textSize="18sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:gravity="center_horizontal" />

    </LinearLayout>
</RelativeLayout>
</layout>